import MainLayout from "~/presentation/shared/layouts/MainLayout.astro";
import MainSection from "~/presentation/shared/components/ui/blocks/MainSection.astro";
import LeftSection from "~/presentation/shared/components/ui/blocks/LeftSection.astro";
import RightSection from "~/presentation/shared/components/ui/blocks/RightSection.astro";
import FeaturesStats from "~/presentation/shared/components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "~/presentation/shared/assets/images/image-not-found.svg";
