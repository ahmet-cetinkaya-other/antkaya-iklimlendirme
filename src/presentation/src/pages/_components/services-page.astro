import { SITE } from "~/presentation/shared/constants/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Lorem Ipsum Dolor Sit Amet",
    subTitle:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    imgTwo: personWorking,
    imgTwoAlt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
  },
  {
    isRightSection: false,
    title: "Lorem Ipsum Dolor Sit Amet",
    subTitle:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    img: beforeAfter,
    imgAlt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Lorem Ipsum Dolor Sit Amet",
    subTitle:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
    imgTwo: aerialView,
    imgTwoAlt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
  },
  {
    isRightSection: false,
    title: "Lorem Ipsum Dolor Sit Amet",
    subTitle:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    img: usingTools,
    imgAlt: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
  },
  {
    isRightSection: true,
    title: "Lorem Ipsum Dolor Sit Amet",
    subTitle:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    single: false,
    imgOne: progressBuilding,
