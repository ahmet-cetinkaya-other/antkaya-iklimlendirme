---
// Import the necessary components
import MainLayout from "~/presentation/shared/layouts/MainLayout.astro";
import HeroSection from "~/presentation/shared/components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "~/presentation/shared/components/sections/landing/HeroSectionAlt.astro";
import BrandsSection from "~/presentation/shared/components/sections/landing/BrandsSection.astro";
import FeaturesGeneral from "~/presentation/shared/components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "~/presentation/shared/components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "~/presentation/shared/components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "~/presentation/shared/components/sections/pricing/PricingSection.astro";
import FAQ from "~/presentation/shared/components/sections/misc/FAQ.astro";
import AnnouncementBanner from "~/presentation/shared/components/ui/banners/AnnouncementBanner.astro";
import heroImage from "~/presentation/shared/assets/images/living-room.webp";
import wallMountedAcUnitImage from "~/presentation/shared/assets/images/wall-mounted-ac-unit.webp";
import acTechnicianImage from "~/presentation/shared/assets/images/ac-technician.webp";
import radiaorImage from "~/presentation/shared/assets/images/radiator.webp";
import faqs from "~/domain/data/faqs.json";
import pricing from "~/domain/data/pricing.json";
import featureImage from "~/presentation/shared/assets/images/image-not-found.svg";
import construction from "~/presentation/shared/assets/images/image-not-found.svg";
import dashboard from "~/presentation/shared/assets/images/image-not-found.svg";
import { useI18nStatic } from "~/presentation/shared/hooks/useI18n";
import { TranslationKeys } from "~/domain/models/TranslationKey";
import Contacts from "~/domain/data/Contacts";
import { PAGES } from "~/presentation/shared/constants/constants";

const { translate, currentLocale } = useI18nStatic(Astro.url);
---

<MainLayout>
  <AnnouncementBanner
    title={translate(TranslationKeys.contact_call_us)}
    btnId="dismiss-button"
    btnTitle={translate(TranslationKeys.contact_call)}
    url={`tel:${Contacts.tel}`}
  />

  <HeroSection
    title={translate(TranslationKeys.home_hero_title)}
    subTitle={translate(TranslationKeys.home_hero_subtitle)}
    primaryBtn={translate(TranslationKeys.home_hero_primary_btn)}
    primaryBtnURL={PAGES.services.paths[currentLocale]}
    secondaryBtn={translate(TranslationKeys.home_hero_secondary_btn)}
    secondaryBtnURL={PAGES.contact.paths[currentLocale]}
    withReview={true}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={5}
    reviews={translate(TranslationKeys.home_hero_reviews)}
    src={heroImage}
    alt="Modern air conditioning system installation and service"
  />

  <div class="px-4 py-5 sm:px-6 lg:px-8 lg:py-7">
    <BrandsSection
      title={translate(TranslationKeys.brands_section_title)}
      subTitle={translate(TranslationKeys.brands_section_subtitle)}
    />
  </div>

  <section class="container">
    <FeaturesGeneral
      title={translate(TranslationKeys.features_section_title)}
      subTitle={translate(TranslationKeys.features_section_subtitle)}
      features={[
        {
          heading: translate(TranslationKeys.features_professional_service),
          content: translate(TranslationKeys.features_professional_service_desc),
          svg: "wrench",
        },
        {
          heading: translate(TranslationKeys.features_maintenance),
          content: translate(TranslationKeys.features_maintenance_desc),
          svg: "calendar",
        },
        {
          heading: translate(TranslationKeys.features_support),
          content: translate(TranslationKeys.features_support_desc),
          svg: "phone",
        },
        {
          heading: translate(TranslationKeys.features_quality),
          content: translate(TranslationKeys.features_quality_desc),
          svg: "shield",
        },
      ]}
    />

    <FeaturesNavs
      title={translate(TranslationKeys.features_tabs_title)}
      tabs={[
        {
          heading: translate(TranslationKeys.features_ac_service_heading),
          content: translate(TranslationKeys.features_ac_service_content),
          icon: "wrench",
          imageSrc: acTechnicianImage,
          imageAlt: "Air conditioner service and maintenance",
          first: true,
        },
        {
          heading: translate(TranslationKeys.features_ac_installation_heading),
          content: translate(TranslationKeys.features_ac_installation_content),
          icon: "snowflake",
          imageSrc: wallMountedAcUnitImage,
          imageAlt: "Air conditioner installation",
          second: true,
        },
        {
          heading: translate(TranslationKeys.features_heating_service_heading),
          content: translate(TranslationKeys.features_heating_service_content),
          icon: "fire",
          imageSrc: radiaorImage,
          imageAlt: "Radiator and heating system service",
        },
      ]}
    />
  </section>

  <TestimonialsSection
    title="Fast-Track Your Projects"
    subTitle="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    testimonials={[
      {
        content: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
        author: "Samantha Ruiz",
        role: "Chief Operating Officer | ConstructIt Inc.",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "70k+",
        description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
      },
      {
        count: "35%",
        description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
      },
      {
        count: "15.3%",
        description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
      },
      {
        count: "2x",
        description: "Lorem ipsum dolor sit amet, consectetur adipiscing elit.",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Let's Build Together"
    subTitle="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    url="https://github.com/mearashadowfax/Antkaya Ä°klimlendirme"
  />
</MainLayout>
