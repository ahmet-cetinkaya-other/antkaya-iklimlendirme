---
type Props = {
  svg: string;
  alt: string;
  isSpin?: boolean;
  onClick?: () => void;
  class?: string;
  fillColor?: string;
};

const getFilledSvg = (svg, fillColor) => {
  return svg.replace(/fill=".*?"/g, `fill="${fillColor}"`);
};
---
<svg
  onClick={Astro.props.onClick}
  innerHTML={Astro.props.fillColor ? getFilledSvg(Astro.props.svg, Astro.props.fillColor) : Astro.props.svg}
  class={mergeCls("select-none", Astro.props.class, {
    "animate-spin": Astro.props.isSpin ?? false,
  })}
  style={{ fill: Astro.props.fillColor }}
  aria-label={Astro.props.alt}
/>
