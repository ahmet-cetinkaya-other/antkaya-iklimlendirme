---
import PrimaryCTA from "~/presentation/src/shared/components/ui/buttons/PrimaryCTA.astro";
import Icon from "../../ui/icons/Icon.astro";

const { title, subTitle, url, btnTitle, icon = "arrow-right" } = Astro.props;

type Props = {
  title: string;
  subTitle?: string;
  url?: string;
  btnTitle: string;
  icon?: string;
};
---

<section class="relative mx-auto max-w-[85rem] px-4 py-14 sm:px-6 lg:px-8">
  <!-- Decorating SVG elements -->
  <div class="absolute left-[85%] top-0 -z-10 scale-75">
    <Icon name="sun" class="h-16 w-16 text-primary" />
  </div>
  <div class="absolute left-0 top-[55%] -z-10 scale-90 md:top-[20%] xl:left-[10%] xl:top-[25%]">
    <Icon name="snowflake" class="h-16 w-16 text-secondary" />
  </div>
  <div class="absolute bottom-0 left-[60%] -z-10 scale-[.6] xl:left-[35%]">
    <Icon name="fire" class="h-16 w-16 text-red-600" />
  </div>
  <!-- Hero Section Heading -->
  <div class="mx-auto mt-5 max-w-xl text-center">
    <h2
      class="block text-balance text-4xl font-bold leading-tight tracking-tight text-neutral-800 dark:text-neutral-200 md:text-5xl lg:text-6xl"
    >
      {title}
    </h2>
  </div>
  <!-- Hero Section Sub-heading -->
  <div class="mx-auto mt-5 max-w-3xl text-center">
    {subTitle && <p class="text-pretty text-lg text-neutral-600 dark:text-neutral-400">{subTitle}</p>}
  </div>
  <!-- Button -->
  {
    url && (
      <div class="mt-8 flex justify-center gap-3">
        <PrimaryCTA url={url} title={btnTitle} icon={icon} iconClass="size-6" />
      </div>
    )
  }
</section>
