---
import { useI18nStatic } from "~/presentation/src/shared/hooks/useI18n";
import { TranslationKeys } from "~/domain/models/TranslationKey";
import Icon from "~/presentation/src/shared/components/ui/icons/Icon.astro";
import type { Icons } from "~/presentation/src/shared/components/ui/icons/icons";

const { translate } = useI18nStatic(Astro.url);

type Props = {
  title: TranslationKeys;
  subTitle?: TranslationKeys;
};
const props = Astro.props;

const logos: (keyof typeof Icons)[] = [
  "daikinLogo",
  "mitsubishiLogo",
  "airfelLogo",
  "samsungLogo",
  "demirdokumLogo",
  "boschLogo",
  "arcelikLogo",
  "bekoLogo",
  "fujitsuLogo",
  "siemensLogo",
  "lgLogo",
  "vestelLogo",
];
---

<section class="mx-auto max-w-[85rem] 2xl:max-w-full">
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2 class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 sm:text-3xl">
      {translate(props.title)}
    </h2>
    {
      props.subTitle && (
        <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">{translate(props.subTitle)}</p>
      )
    }
  </div>

  <div class="relative w-full overflow-hidden">
    <div
      class="relative mx-auto w-full overflow-hidden [mask-image:linear-gradient(to_right,transparent,black_10%,black_90%,transparent)]"
    >
      <div
        class="flex w-fit animate-ac-scroll hover:[animation-play-state:paused] motion-reduce:[animation-play-state:paused]"
      >
        {
          [0, 1, 2].map(() => (
            <div class="ms-6 flex min-w-max items-center gap-12 p-4">
              {logos.map((logo) => (
                <Icon
                  name={logo}
                  class="h-20 w-20 opacity-70 transition hover:opacity-100 dark:fill-current dark:text-white sm:h-24 sm:w-24"
                />
              ))}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
