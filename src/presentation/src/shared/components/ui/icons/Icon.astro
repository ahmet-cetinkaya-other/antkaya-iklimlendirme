---
import { mergeCls } from "~/core/acore-ts/ui/ClassHelpers";
import { Icons } from "./icons.ts";

type Props = {
  name: string;
  class?: string;
};

const props = Astro.props;

type Path = {
  d: string;
  class?: string;
};

let icon = (Icons as any)[props.name] || {};
let paths: Path[] = icon.paths || [];
---

{
  icon ? (
    <svg
      class={mergeCls(icon.class, props.class)}
      height={icon.height}
      viewBox={icon.viewBox}
      width={icon.width}
      fill={icon.fill}
      clip-rule={icon.clipRule}
      fill-rule={icon.fillRule}
      stroke={icon.stroke}
      stroke-width={icon.strokeWidth}
      stroke-linecap={icon.strokeLinecap}
      stroke-linejoin={icon.strokeLinejoin}
    >
      <title>{icon.title}</title>
      {paths.map((path: Path) => (
        <path d={path.d} class={path.class || ""} />
      ))}
    </svg>
  ) : (
    "Icon not found"
  )
}
