---
import Icon from "../icons/Icon.astro";

interface Props {
  heading?: string;
  icon: string;
}
const props = Astro.props;
---

<!-- The root container that arranges your slot and the heading/content -->
<div class="flex gap-x-5">
  <!-- Slot to allow for extensibility of the component -->
  <Icon name={props.icon} class="size-6 text-neutral-700 dark:text-neutral-300" />

  <div class="grow">
    <!-- Heading of the section -->
    {
      props.heading && (
        <h3 class="text-balance text-lg font-bold text-neutral-800 dark:text-neutral-200">{props.heading}</h3>
      )
    }
    <!-- Content text of the section -->
    <div class="mt-1 text-pretty text-neutral-700 dark:text-neutral-300">
      <slot />
    </div>
  </div>
</div>
