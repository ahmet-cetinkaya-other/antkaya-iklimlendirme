---
import PrimaryCTA from "~/presentation/shared/components/ui/buttons/PrimaryCTA.astro";
import Icon from "../icons/Icon.astro";

const { title, subTitle, btnExists, btnTitle, btnURL } = Astro.props;
interface Props {
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
}
---

<section
  class="relative mx-auto flex min-h-[50vh] flex-col items-center justify-center overflow-hidden bg-gradient-to-b from-primary-50 to-white px-4 py-20 dark:from-primary-950/10 dark:to-neutral-950 sm:px-6 lg:min-h-[60vh] lg:px-8"
>
  <!-- Decorative shapes -->
  <div class="pattern-dots absolute inset-0 opacity-5"></div>
  <div class="absolute left-0 top-0 -ml-48 h-96 w-96 rounded-full bg-primary-100/20 blur-3xl dark:bg-primary-900/30">
  </div>
  <div class="absolute right-0 top-0 -mr-48 h-96 w-96 rounded-full bg-primary-100/20 blur-3xl dark:bg-primary-900/30">
  </div>

  <div class="relative mx-auto max-w-3xl pt-16 text-center">
    <!-- Icon -->
    <div
      class="mx-auto mb-8 flex h-16 w-16 items-center justify-center rounded-full bg-primary-100 dark:bg-primary-900/30"
    >
      <Icon name="snowflake" class="h-8 w-8 text-primary-500 dark:text-primary-400" />
    </div>

    <!-- Title with gradient text -->
    <h1
      class="mb-4 text-balance text-4xl font-extrabold tracking-tight text-neutral-800 dark:text-neutral-200 sm:text-5xl lg:text-6xl"
    >
      <span
        class="bg-gradient-to-r from-primary-500 to-primary-400 bg-clip-text text-transparent dark:from-primary-400 dark:to-primary-600"
      >
        {title}
      </span>
    </h1>

    <!-- Subtitle with larger text -->
    <p class="mb-8 text-pretty font-medium text-neutral-600 dark:text-neutral-400">
      {subTitle}
    </p>

    <!-- CTA Button with animation -->
    {
      btnExists && (
        <div class="flex flex-col items-center justify-center space-y-4 sm:flex-row sm:space-x-4 sm:space-y-0">
          <PrimaryCTA
            title={btnTitle}
            url={btnURL}
            class="animate-pulse bg-secondary hover:animate-none hover:bg-secondary-600"
          />
        </div>
      )
    }

    <!-- Decorative bottom pattern -->
    <div
      class="-bottom[0.5rem] absolute left-1/2 h-px w-full max-w-[80%] -translate-x-1/2 bg-gradient-to-r from-transparent via-secondary-200 to-transparent dark:via-secondary-800/50"
    >
    </div>
  </div>
</section>

<style>
  .pattern-dots {
    background-image: radial-gradient(currentColor 1px, transparent 1px);
    background-size: 32px 32px;
  }
</style>
